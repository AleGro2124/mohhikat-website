{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "framework": "vite",
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD .",
  "env": {
    "VITE_STRIPE_PUBLIC_KEY": "@vite_stripe_public_key",
    "VITE_BACKEND_URL": "@vite_backend_url"
  }
}
